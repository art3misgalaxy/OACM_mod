councilor_citizens_assembly = {
	leader_class = { official }
	is_leader_possible = {
		OR = {
			leader_class = official
		}
	}
	civic = civic_citizens_assembly
	modifier = {
		planet_jobs_worker_produces_mult = 0.05
		planet_researchers_upkeep_mult = -0.05
	}
	ai_hiring_weight = {
		inline_script = councilor_leader_weights
	}
}

